@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using EntityLayer.Concrete
@model List<Opsiyonlar>
@{
    ViewData["Title"] = "Opsiyon";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="typo">
    <div class="container">
        <div class="typo-title">
            <h3>@localizer["OPSİYONLAR"]</h3>
        </div>
        <div class="container">
            <div class="bs-docs-example">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@localizer["Opsiyon"]</th>
                            <th>@localizer["Opsiyon Fiyatı"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@localizer[@item.Opsiyon_Adi]</td>
                                <td>@item.Opsiyon_Fiyati</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
